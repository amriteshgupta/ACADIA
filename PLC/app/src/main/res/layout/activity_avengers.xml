<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Avengers">

    <TextView
        android:id="@+id/txt_tony"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="145dp"
        android:layout_marginTop="280dp"
        android:text="Tony Stark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_steve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Steve Rogers"
        app:layout_constraintStart_toStartOf="@+id/txt_natasha"
        app:layout_constraintTop_toBottomOf="@+id/txt_natasha" />

    <TextView
        android:id="@+id/txt_clint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:text="Clint Barton"
        app:layout_constraintStart_toStartOf="@+id/txt_steve"
        app:layout_constraintTop_toBottomOf="@+id/txt_steve" />

    <TextView
        android:id="@+id/txt_natasha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="Natasha Romonoff"
        app:layout_constraintStart_toStartOf="@+id/txt_tony"
        app:layout_constraintTop_toBottomOf="@+id/txt_tony" />

    <TextView
        android:id="@+id/txt_thor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Thor Odinson"
        app:layout_constraintStart_toStartOf="@+id/txt_clint"
        app:layout_constraintTop_toBottomOf="@+id/txt_clint" />

    <TextView
        android:id="@+id/txt_bruce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Bruce Banner"
        app:layout_constraintStart_toStartOf="@+id/txt_thor"
        app:layout_constraintTop_toBottomOf="@+id/txt_thor" />
</androidx.constraintlayout.widget.ConstraintLayout>