<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imgTonyStark"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/tony_stark_new"
            android:layout_margin="20dp"
            />
        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tony Stark"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/imgTonyStark"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:textStyle="bold"

            />
        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tony@starkindustries.com"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_toRightOf="@id/imgTonyStark"
            android:layout_below="@id/txtName"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/txtContactNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91 111111555"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_toRightOf="@id/imgTonyStark"
            android:layout_below="@id/txtEmail"
            android:layout_margin="15dp"/>
            </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imgSteveRogers"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/captain_america"
            android:layout_margin="20dp"
            />
        <TextView
            android:id="@+id/txtNameCaptain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steve Rogers"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/imgSteveRogers"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:textStyle="bold"

            />
        <TextView
            android:id="@+id/txtEmailSteve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="steve@starkindustries.com"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_toRightOf="@id/imgSteveRogers"
            android:layout_below="@id/txtNameCaptain"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/txtContactSteve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91 22222555"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_toRightOf="@id/imgSteveRogers"
            android:layout_below="@id/txtEmailSteve"
            android:layout_margin="15dp"
            />
    </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
