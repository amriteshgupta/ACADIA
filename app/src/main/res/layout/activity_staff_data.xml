<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.staff.StaffData">
    <TextView
        android:id="@+id/txt_staff_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="#3F7CAC"
        android:text="Staff Data"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtStudentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="58dp"
        android:text=" Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_student_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Email"
        app:layout_constraintStart_toStartOf="@+id/txtStudentName"
        app:layout_constraintTop_toBottomOf="@+id/txtStudentName" />

    <TextView
        android:id="@+id/txt_staff_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Phone"
        app:layout_constraintStart_toStartOf="@+id/txt_student_email"
        app:layout_constraintTop_toBottomOf="@+id/txt_student_email" />

    <ImageView
        android:id="@+id/img_Student_display_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txt_salary_remain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salary Remain"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="167dp" />

    <TextView
        android:id="@+id/txt_Attendence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attendence"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="215dp" />


</androidx.constraintlayout.widget.ConstraintLayout>