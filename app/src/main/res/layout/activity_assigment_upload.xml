<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.student.AssigmentUpload">
    <TextView
        android:id="@+id/txt_classroom_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#3F7CAC"
        android:text="Assigment Upload"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload PDF"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="252dp" />

    <EditText
        android:id="@+id/et_assignment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Enter Assigment Name"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="166dp" />

    <Button
        android:id="@+id/btn_upload_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Answer"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="350dp" />

</androidx.constraintlayout.widget.ConstraintLayout>